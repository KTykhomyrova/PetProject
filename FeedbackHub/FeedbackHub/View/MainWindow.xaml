<Window
    x:Class="FeedbackHub.View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FeedbackHub"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:FeedbackHub.ViewModel"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
    mc:Ignorable="d">
    <StackPanel Margin="20">
        <TextBlock Margin="0,0,0,5" Text="Оцени урок от 1 до 10:" />
        <Slider
            Margin="0,0,0,10"
            IsSnapToTickEnabled="True"
            Maximum="10"
            Minimum="1"
            TickFrequency="1"
            Value="{Binding Rating, Mode=TwoWay}" />

        <TextBlock Margin="0,0,0,5" Text="Заметка:" />
        <TextBox
            Height="60"
            Margin="0,0,0,10"
            AcceptsReturn="True"
            Text="{Binding Note, Mode=TwoWay}"
            TextWrapping="Wrap" />

        <Button
            Margin="0,0,0,10"
            Command="{Binding SaveCommand}"
            Content="Сохранить" />

        <TextBlock
            FontWeight="Bold"
            Foreground="Green"
            Text="{Binding Result, Mode=TwoWay}" />
    </StackPanel>
</Window>
